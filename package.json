{
  "name": "naive-definitions",
  "displayName": "Naive Definitions",
  "description": "Best-effort 'Go to Definition' and 'Find Reference'",
  "license": "MIT",
  "version": "0.1.2",
  "publisher": "FallenMax",
  "repository": {
    "type": "git",
    "url": "https://github.com/fallenmax/naive-definitions"
  },
  "bugs": {
    "url": "https://github.com/fallenmax/naive-definitions/issues"
  },
  "keywords": [
    "navigation",
    "lsp",
    "definition",
    "reference",
    "find",
    "fuzzy",
    "search"
  ],
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Naive Definitions",
      "properties": {
        "naiveDefinitions.languageConfigs": {
          "type": "array",
          "markdownDescription": "The configuration for each programming language. \nSee https://github.com/fallenmax/naive-definitions/blob/main/README.md#configuration for more details.",
          "default": [
            {
              "languages": [
                "javascript",
                "javascriptreact",
                "typescript",
                "typescriptreact",
                "vue"
              ],
              "definitionPatterns": [
                "(var|let|const)[^=]+\\b%s\\b",
                "\\b%s\\b\\s*=[^=]+",
                "\\bfunction\\b.*\\b%s\\b",
                "\\b%s\\b\\s*:",
                "^\\s*(async|public|private|protected)?\\s*%s\\s*\\([^\\)]*\\)\\s*\\{",
                "\\bclass\\b.*\\b%s\\b"
              ],
              "referencePatterns": [
                "\\b%s\\b"
              ],
              "fileGlobs": [
                "**/*.js",
                "**/*.jsx",
                "**/*.ts",
                "**/*.tsx",
                "**/*.vue"
              ]
            }
          ],
          "description": "The configuration for each programming language."
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "compile": "pnpm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "pnpm run package",
    "package": "pnpm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/node": "^22.3.0",
    "esbuild": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "vscode": "^1.1.37"
  }
}
